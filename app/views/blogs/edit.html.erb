<%= render 'partial/navbar' %>
<div class="container">
  <div class="profile-edit row">
    <div class="col-md-3 row-space-4">
      <!--  自分のブログへのリンク -->
      <%= link_to "ブログを確認する" , class: "btn btn-default btn-full" %>
    </div>
    
    <div class="col-md-9">
    <div class="panel panel-success panel-default">
    	<div class="panel-heading">
    		ブログを更新する
    	</div>
    	<div class="panel-body row">
    	  <div class="col-md-10">
        <%= form_for @blog do |f| %>
        
          <div class="form-group">
            <label for="exampleFormControlInput1">ブログのタイトル</label>
            <%= f.text_field :blog_title, autofocus: true , :class => 'form-control' %>
          </div>
          
          <div class="form-group">
            <label for="exampleFormControlTextarea1">本文</label>
            <%= f.text_area :blog_content, rows: 15, cols: 25, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">画像</label>
            <%= f.file_field :bimage, accept: 'image/jpeg,image/gif,image/png' %>
          </div>
          <div class="actions">
              <%= f.submit "プロフィールを更新", :class => "btn btn-primary btn-plofile btn-lg" %>
          </div>
        <% end %>
        </div>
    	</div>
    </div>
    </div>
  </div>
</div>
<%= render 'partial/footer' %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>