<%= render 'partial/navbar' %>
<div class="container">
  <div class="profile-edit row">
    <div class="col-md-3 row-space-4">
      <!--  自分のプロフィールへのリンク -->
      <%= link_to "自分のプロフィールを確認する",farmer_path(current_farmer), class: "btn btn-default btn-full" %>
    </div>
    
    <div class="col-md-9">
    <div class="panel panel-success panel-default">
    	<div class="panel-heading">
    		プロフィールの編集
    	</div>
    	<div class="panel-body row">
    	  <div class="col-md-10">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>
        
          <div class="form-group">
            <label for="exampleFormControlInput1">農家の名前を教えてください</label>
            <%= f.text_field :name, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">画像をください</label>
              <%= f.file_field :image,  :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">お仕事の内容を一言で教えてください</label>
            <%= f.text_field :job_about, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">社長さんの名前を教えてください</label>
            <%= f.text_field :leader_name, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">会社のご住所はどこですか？</label>
            <%= f.text_field :place, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">電話番号を教えてください</label>
            <%= f.text_field :phone_number, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">従業員の人数を教えてください</label>
            <%= f.text_field :member_number, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">どんな会社ですか？</label>
            <%= f.text_area :description_us, rows: 5, cols: 25, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">何をしている会社ですか？</label>
            <%= f.text_area :description_about, rows: 5, cols: 25, :class => 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄で構いません)</i><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
          </div>

          <div class="form-group">
              <%= f.label :新しいパスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
          </div>
          <div class="actions">
              <%= f.submit "プロフィールを更新", :class => "btn btn-primary btn-plofile btn-lg" %>
          </div>
        <% end %>
        </div>
    	</div>
    </div>
    </div>
  </div>
</div>
<%= render 'partial/footer' %>