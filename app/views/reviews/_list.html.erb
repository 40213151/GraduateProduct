<% if @reviews.count == 0 %>
    <div class="text-center">
        <h4>まだレビューがありません</h4>
    </div>
<% else %>
    <% @reviews.order("id desc").each do |review| %>
    <hr>
    <div class="row">
        <div class="col-md-2 text-center">
                <%= image_tag review.farmer.image, class:"img-circle profile-1" %>
            <div class="row">
                <%= review.farmer.name %>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row-space-1">
                <%= review.description %>
            </div>
            
            <div>
                <%= review.created_at.strftime("%Y年%m月%d日") %>
            </div>
            
            <div>
                <span class="pull-right">
                    <%= link_to "削除",[@student,review],method: :delete, data: {confirm: "削除しますか？"},class:"btn btn-danger" if current_farmer = review.farmer %>
                </span>
            </div>
        </div>
    </div>
<% end %>
<% end %>