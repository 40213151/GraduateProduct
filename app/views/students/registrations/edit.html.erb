<%= render 'partial/navbar' %>
<div class="container">
  <div class="profile-edit row">
    <div class="col-md-3 row-space-4">
      <!--  自分のプロフィールへのリンク -->
      <%= link_to "自分のプロフィールを確認する",student_path(current_student), class: "btn btn-default btn-full" %>
    </div>
    
    <div class="col-md-9">
    <div class="panel panel-success panel-default">
    	<div class="panel-heading">
    		プロフィールの編集
    	</div>
    	<div class="panel-body row">
    	  <div class="col-md-10">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>
        
          <div class="form-group">
            <label for="exampleFormControlInput1">あなたの名前を教えてください</label>
            <%= f.text_field :name, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :'画像をください' %>
              <%= f.attachment_field :farmer_images_images, multiple: true, accept: 'image/jpeg,image/gif,image/png' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">大学名と学部名を教えてください</label>
            <%= f.text_field :school, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">お住いはどこらへんでしょうか？</label>
            <%= f.text_field :place, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">年齢はおいくつですか？</label>
            <%= f.text_field :age, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">facebookアカウント</label>
            <%= f.text_field :facebook, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">twitterアカウント</label>
            <%= f.text_field :twitter, autofocus: true , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">自己PRをご記入ください</label>
            <%= f.text_area :description_pr, rows: 5, cols: 25, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">本アプリを通して、やりたいことは何ですか？</label>
            <%= f.text_area :description_interested, rows: 5, cols: 25, :class => 'form-control' %>
          </div>
          <div class="form-group">
              <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄で構いません)</i><br />
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
          </div>

          <div class="form-group">
              <%= f.label :新しいパスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
          </div>
          <div class="actions">
              <%= f.submit "プロフィールを更新", :class => "btn btn-primary btn-plofile btn-lg" %>
          </div>
        <% end %>
        </div>
    	</div>
    </div>
    </div>
  </div>
</div>
<%= render 'partial/footer' %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>